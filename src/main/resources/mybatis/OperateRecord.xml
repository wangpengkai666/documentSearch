<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.documentseach.persistent.dao.mysql.optrcord.OperateRecordDAO">
    <resultMap id="BaseResultMap"
               type="com.example.documentseach.bean.po.OperateRecordPO">
        <result column="id"             jdbcType="INTEGER" property="id"/>
        <result column="topic"          jdbcType="INTEGER" property="topicId"/>
        <result column="content"        jdbcType="LONGVARCHAR" property="content"/>
        <result column="operator"       jdbcType="VARCHAR" property="operator"/>
        <result column="type"           jdbcType="VARCHAR" property="type"/>
        <result column="create_time"       jdbcType="TIMESTAMP"   property="createTime" />
        <result column="update_time"       jdbcType="TIMESTAMP"   property="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id, topic,content, operator, 'type', add_time, update_time
    </sql>

    <insert id="insert"
            parameterType="com.example.documentseach.bean.po.OperateRecordPO"
            useGeneratedKeys="true"
            keyColumn="id" keyProperty="id">
        insert into operate_record
            (topic, content, operator, type)
        values (#{topicId}, #{content}, #{operator}, #{type})
    </insert>

    <select id="listByCondition" resultMap="BaseResultMap"
            parameterType="com.example.documentseach.bean.po.OperateRecordPO">
        select
        <include refid="Base_Column_List"/>
        from operate_record
        <trim prefix="where" prefixOverrides="and">
            <if test="id != null">and id = #{id}</if>
            <if test="moduleId != null">and module_id = #{moduleId}</if>
            <if test="operateId != null">and operate_id = #{operateId}</if>
            <if test="bizId != null">and  biz_id = #{bizId}</if>
            <if test="operator != null">and operator = #{operator}</if>
            <if test="beginTime != null">and operate_time >= #{beginTime}</if>
            <if test="endTime != null">and operate_time &lt;= #{endTime}</if>
        </trim>
        order by id desc
    </select>

    <update id="compatible">
        update operate_record
        set biz_id = CONCAT(business_id,'')
        where biz_id = '';
    </update>

    <update id="deleteByModuleIdAndLessThanId">
        delete from operate_record
        where module_id = #{moduleId} and id &lt; #{id}
    </update>
</mapper>